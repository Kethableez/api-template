{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "error",
        "no-var": "error",
        "eqeqeq": "error",
        "max-lines": [
            "error",
            {
                "max": 120,
                "skipBlankLines": true,
                "skipComments": true
            }
        ],
        "max-depth": [
            "error",
            {
                "max": 2
            }
        ],
        "max-nested-callbacks": [
            "error",
            {
                "max": 2
            }
        ],
        "no-duplicate-imports": "error"
    }
}
